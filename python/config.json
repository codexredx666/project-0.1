{
  "model": {
    "input_shape": [224, 224, 3],
    "num_classes": 2,
    "class_names": ["Bike", "Car"]
  },
  "training": {
    "epochs": 50,
    "batch_size": 32,
    "learning_rate": 0.001,
    "early_stopping_patience": 10,
    "reduce_lr_patience": 5
  },
  "data": {
    "data_dir": "data",
    "img_size": [224, 224],
    "train_split": 0.7,
    "val_split": 0.15,
    "test_split": 0.15
  },
  "augmentation": {
    "rotation_range": 20,
    "width_shift_range": 0.2,
    "height_shift_range": 0.2,
    "shear_range": 0.2,
    "zoom_range": 0.2,
    "horizontal_flip": true,
    "brightness_range": [0.8, 1.2]
  },
  "api": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": true
  }
}
